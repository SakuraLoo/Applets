.cu-card>.cu-item {
  margin: 0;
}
.text-content {
  margin: 5px;
}
.item_title {
  font-size: 32rpx;
  font-weight: bold;
  font-family: 'SimHei';
}
.item_text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
}