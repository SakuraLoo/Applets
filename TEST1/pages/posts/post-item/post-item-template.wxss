.cu-card>.cu-item {
  margin: 0;
}
.cu-item {
  background-color: #fff;
  margin-top: 20rpx;
}
.text-content {
  margin: 5px;
}
.item_title {
  font-size: 32rpx;
  font-weight: bold;
  font-family: 'SimHei';
}
.item_text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
}

.cu-avatar,.bg-img {
  overflow: hidden;
}
.cu-avatar image, .bg-img image {
  width: 100%;
  height: 100%;
}