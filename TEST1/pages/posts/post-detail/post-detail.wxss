/* pages/posts/post-detail/post-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.contain_padding {
  margin: 30rpx;
}
.author-date {
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.author {
  margin: 0 15rpx;
  font-size: 30rpx;
  font-weight: 300;
  color: #666;
}
.date {
  margin: 0 15rpx;
}

.article_title {
  margin-top: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.icon_cont {
  margin: 20rpx 0;
}
.icon_cont:after {
  content: "";
  height: 1px;
  display: block;
  clear: both;
}
.icon_hr {
  width: 100%;
  height: 4rpx;
  position: relative;
  top: calc((65rpx - 4rpx)/2);
  background-color: #ddd;
  z-index: -1;
}
.iconBox {
  float: right;
  z-index: 1;
}
.iconBox div {
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  width: 68rpx;
  height: 65rpx;
  border-radius: 50%;
}
.iconBox image {
  width: 60%;
  height: 60%;
}
.collectBox {
  background-color: #ddd;
}
.collectBox.active {
  background-color: #004DB8;
}
.shareBox {
  background-color: #ddd;
}
.shareBox.active {
  background-color: #20868F;
}

.article_text {
  display:block;
  line-height: 48rpx;
  text-indent: 2em;
}