<!--pages/posts/post-detail/post-detail.wxml-->

<view class="container">
  <image class="head-image" src="{{ img }}"></image>
  <view class="contain_padding">
    <view class="author-date">
      <image class="avatar" src="{{ authorPhoto }}"></image>
      <text class="author"> {{ author }} </text>
      <text class="const-date">发表于</text>
      <text class="date"> {{ date }}</text>
    </view>
    <view class="article_title">
      <text> {{ title }} </text>
    </view>
    <view class="icon_cont">
      <view class="icon_hr"/>
      <view class="iconBox">
        <div class="collectBox {{isCollectActive}}" bindtap="CollectClick"><image src="/images/icon/collection.png"></image></div>
        <div class="shareBox {{isShareActive}}" bindtap="ShareClick"><image src="/images/icon/share.png"></image></div>
      </view>
    </view>
    <view>
      <text class="article_text"> {{ text }} </text>
    </view> 
  </view>
</view>