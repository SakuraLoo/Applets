page,view {
  width: 100%;
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #000;
  color: #fff;
}
.user-avatar {
  margin: 100px 0 10px 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.user-name {
  margin-top: 20px;
  font-size: 32rpx;
  font-weight: bold;
}
.moto {
  margin-top: 20px;
  font-size: 28rpx;
  font-weight: bold;
  background-color: transparent;
  color: #fff;
  border: 1px #fff solid;
}